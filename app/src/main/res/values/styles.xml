<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyles.TextStyle">
        <item name="android:text">@string/tiltle_txt</item>
    </style>

    <style name="ToolabrImageStyle">
        <item name="android:layout_width">@dimen/width</item>
        <item name="android:layout_height">@dimen/width</item>
    </style>

    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/radiuscard</item>
        <item name="cardElevation">@dimen/elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/left_right_ms</item>
        <item name="android:layout_marginRight">@dimen/left_right_ms</item>
    </style>


    <style name="ImageSearch" >
        <item name="android:src">@drawable/ic_search_black_24dp</item>
        <item name="android:layout_width">@dimen/defaultwidth</item>
        <item name="android:layout_height">@dimen/width</item>
    </style>

    <style name="UserCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/standard_ms</item>
        <item name="cardCornerRadius">@dimen/radiuscard</item>
        <item name="cardElevation">@dimen/elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="UsernameStyle"  parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/username_1</item>
        <item name="android:paddingLeft">@dimen/padding_card_const</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/standard_ms</item>
    </style>

    <style name="Sub_Username" parent="@style/Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/sub_id_1</item>
        <item name="android:paddingTop">@dimen/padding_top_subuser</item>
        <item name="android:paddingLeft">@dimen/padding_card_const</item>
    </style>

    <style name="CircleAdd">
        <item name="android:layout_width">@dimen/add_circle</item>
        <item name="android:layout_height">@dimen/add_circle</item>
        <item name="android:src">@drawable/ic_add_black_24dpw</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:padding">@dimen/padding_top_subuser</item>
        <item name="android:layout_marginTop">@dimen/padding_card_const</item>
    </style>


    <style name="SearchStyle">
        <item name="android:layout_width">@dimen/defaultwidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/search_txt</item>
        <item name="android:padding">@dimen/padding_top_subuser</item>
        <item name="android:textColor">@color/grey_d</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="TextStyles" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/standard_ms</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextStyles.TextStyleChat" >
        <item name="android:text">@string/username_1</item>
    </style>


    <style name="TimeTextStyle" parent="@style/Base.TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/time</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/padding_top_subuser</item>
        <item name="android:paddingLeft">@dimen/padding_card_const</item>
    </style>

</resources>
